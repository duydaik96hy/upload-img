{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "alwaysStrict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "allowJs": true,
        "sourceMap": true
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}